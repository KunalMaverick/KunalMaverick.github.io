---
interface Props {
  name: string;
  imageUrl: string;
}

const { name, imageUrl } = Astro.props;
---

<div class="profile">
  <img src={imageUrl} alt={name} class="profile-image" />
  <h1 class="name">{name}</h1>
</div>

<style>
  .profile {
    text-align: center;
    margin-bottom: 2rem;
  }

  .profile-image {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    margin-bottom: 1rem;
    border: 3px solid rgb(var(--accent));
    object-fit: cover;
  }

  .name {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
</style>
